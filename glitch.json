{
  "install": "pip3 install -r requirements.txt",
  "start": "gunicorn app:app --bind 0.0.0.0:3000 --timeout 120 --workers 3 --threads 3",
  "watch": {
    "ignore": [
      "\\.pyc$"
    ],
    "install": {
      "include": [
        "^requirements\\.txt$"
      ]
    },
    "restart": {
      "include": [
        "\\.py$",
        "^start\\.sh"
      ]
    },
    "throttle": 1000
  }
} 